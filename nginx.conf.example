# Nginx 配置文件 - 用于部署单页应用（SPA）
# 
# 使用方法：
# 1. 复制此文件到 /etc/nginx/sites-available/tongmeng
# 2. 修改 server_name 和 root 路径
# 3. 创建符号链接：sudo ln -s /etc/nginx/sites-available/tongmeng /etc/nginx/sites-enabled/
# 4. 测试配置：sudo nginx -t
# 5. 重新加载：sudo systemctl reload nginx

server {
    listen 80;
    server_name your-domain.com www.your-domain.com;  # ⚠️ 替换为您的实际域名
    root /var/www/tongmeng/dist;  # ⚠️ 替换为您的 dist 目录完整路径
    index index.html;

    # 字符集
    charset utf-8;

    # 日志文件（可选）
    # access_log /var/log/nginx/tongmeng-access.log;
    # error_log /var/log/nginx/tongmeng-error.log;

    # ⚠️ 关键配置：SPA 路由支持
    # 这行配置确保所有路由都回退到 index.html，解决 404 问题
    location / {
        try_files $uri $uri/ /index.html;
    }

    # 静态资源缓存（提高性能）
    location ~* \.(jpg|jpeg|png|gif|ico|css|js|svg|webp|woff|woff2|ttf|eot)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
        access_log off;
    }

    # 禁止访问隐藏文件
    location ~ /\. {
        deny all;
        access_log off;
        log_not_found off;
    }

    # Gzip 压缩（提高性能）
    gzip on;
    gzip_vary on;
    gzip_min_length 1024;
    gzip_comp_level 6;
    gzip_types text/plain text/css text/xml text/javascript 
               application/x-javascript application/xml+rss 
               application/javascript application/json 
               application/xml image/svg+xml;

    # ⚠️ 重要：API 代理配置（必须启用，否则新游戏接口无法工作）
    # 前端使用相对路径 /api/* 请求，nginx 代理到后端API服务器
    location /api {
        proxy_pass https://api.xpj66666.com;
        proxy_http_version 1.1;
        proxy_set_header Host api.xpj66666.com;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host api.xpj66666.com;
        proxy_set_header Connection "";
        
        # 超时设置
        proxy_connect_timeout 30s;
        proxy_send_timeout 30s;
        proxy_read_timeout 30s;
        
        # 缓冲设置
        proxy_buffering on;
        proxy_buffer_size 4k;
        proxy_buffers 8 4k;
    }

    # 安全头部
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;
}

